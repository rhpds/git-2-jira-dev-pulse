# Git LFS tracking for large video files
videos/*.mp4 filter=lfs diff=lfs merge=lfs -text
videos/*.mov filter=lfs diff=lfs merge=lfs -text
videos/*.avi filter=lfs diff=lfs merge=lfs -text

# Ensure text files use LF line endings
*.md text eol=lf
*.py text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
